{
  "name": "@seacrets/design-system",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "tokens:build": "style-dictionary build --config style-dictionary.config.js",
    "predev": "npm run tokens:build",
    "dev": "storybook dev -p 6006",
    "prebuild": "npm run tokens:build",
    "build": "storybook build",
