{
  "name": "@seacrets/design-system",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./styles": "./src/styles/index.css",
    "./theme": "./src/theme/mui/createTheme.ts"
  },
  "files": [
    "src",
    "README.md"
  ],
  "scripts": {
    "build-dictionary": "tsx scripts/build-dictionary.ts",
    "tokens:build": "npm run build-dictionary",
    "predev": "npm run build-dictionary",
    "dev": "storybook dev -p 6006",
    "prebuild": "npm run build-dictionary",
    "build": "storybook build",
    "prestorybook": "npm run build-dictionary",
    "storybook": "storybook dev -p 6006",
    "prebuild-storybook": "npm run build-dictionary",
    "build-storybook": "storybook build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:storybook": "vitest run --config vitest.storybook.config.ts",
    "test:storybook:ci": "vitest run --config vitest.storybook.config.ts",
    "test:watch": "vitest",
    "lint": "eslint src scripts .storybook && npm run lint:token-colors",
    "lint:token-colors": "tsx scripts/lint-ui-token-colors.ts",
    "validate": "npm run build-dictionary && npm run typecheck && vite build --mode development",
    "chromatic": "dotenv -e .env -- chromatic --exit-zero-on-changes"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/material-icons": "^5.2.7",
    "@fontsource/roboto": "^5.2.9",
    "@material/material-color-utilities": "^0.4.0",
    "@mui/icons-material": "^7.3.8",
    "@mui/material": "^7.3.8",
    "@mui/x-date-pickers": "^8.27.2",
    "@storybook/addon-themes": "^10.2.8",
    "@tokens-studio/sd-transforms": "^2.0.3",
    "dayjs": "^1.11.19",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^10.2.8",
    "@storybook/addon-docs": "^10.2.8",
    "@storybook/addon-vitest": "^10.2.8",
    "@storybook/react-vite": "^10.2.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.28.0",
    "@types/deep-eql": "^4.0.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/browser": "^3.2.4",
    "chromatic": "^15.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^10.0.1",
    "eslint-plugin-storybook": "^10.2.10",
    "jsdom": "^26.1.0",
    "playwright": "^1.58.2",
    "sass-embedded": "^1.97.3",
    "storybook": "^10.2.8",
    "style-dictionary": "^5.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
